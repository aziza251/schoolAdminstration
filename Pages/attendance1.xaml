<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="schoolAdminstration.attendance1">
             
    <VerticalStackLayout>
        <Frame BorderColor="Black" BackgroundColor="Black" CornerRadius="90"  HeightRequest="80" WidthRequest="80"
        Margin="1100,0,0,0" >
            <Image Source="logo_bus.png" HorizontalOptions="Center" VerticalOptions="Center" />
        </Frame>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
            <Label Text="Attendance"
    FontSize="30"
     FontAttributes="Bold"
    Margin="240,0,200,20"/>
        </StackLayout>

        <Picker x:Name="attend"
  Title="Choose Bus"
  HorizontalOptions="Center"
  WidthRequest="302"
  Margin="175,5,200,0"/>
        
        
        
    </VerticalStackLayout>
</ContentPage>