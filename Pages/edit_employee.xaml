<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="schoolAdminstration.edit_employee"
             >
    <VerticalStackLayout Spacing="20" Margin="200">
        <Label 
            Text="Edit Bus Employee"
            HorizontalOptions="Center"
            FontSize="Large"
            FontAttributes="Bold"
            />
        <Picker x:Name="busDriver"
                Title="Select Bus Driver"
                HorizontalOptions="Center"
                WidthRequest="300"
                />

        <Picker x:Name="asst1"
                Title="Select Bus Assistant 1"
                HorizontalOptions="Center"
                WidthRequest="300"
                />

        <Picker x:Name="asst2"
        Title="Select Bus Assistant 2"
        HorizontalOptions="Center"
        WidthRequest="300"
        />

    </VerticalStackLayout>
</ContentPage>