<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="schoolAdminstration.MainPage">


    <StackLayout BackgroundColor="Orange">

        <Frame BorderColor="Black" BackgroundColor="Black" CornerRadius="200"   Margin=" 80" HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="logo_bus.png"   HeightRequest="350" WidthRequest="350"/>

        </Frame>

        <Button x:Name="login" Text="Login" Clicked="login_Clicked"
                WidthRequest="150" HeightRequest="30"
                BackgroundColor="Black"
                TextColor="orange"
                FontAttributes="Bold"
                FontSize="20"/>
        
    </StackLayout>
</ContentPage>
